{
    "env": {
        "browser": true
    },

    "extends": ["airbnb"],
    "rules": {
        "no-console": "off",
        "semi": ["error", "always"],
        "react/jsx-filename-extension": "off",
        "linebreak-style": 0,
        "react/react-in-jsx-scope": "off",
        "no-unused-vars": "off",
        "no-shadow": "off",
        "no-nested-ternary": "off"
    },

    "parserOptions": {
        "parser": "@babel/eslint-parser"  
    }
}